<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/alert_dialog_background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/tv_fact_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/default_font"
        android:text="Fact of the day"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_fact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/default_font"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_fact_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/confirm_button"
        android:gravity="center_horizontal"
        android:paddingHorizontal="30dp"
        android:paddingVertical="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Close"
        android:textAlignment="center"
        android:fontFamily="@font/default_font"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_info"
        app:layout_constraintEnd_toEndOf="@+id/tv_fact"
        app:layout_constraintStart_toStartOf="@+id/tv_fact"
        app:layout_constraintTop_toBottomOf="@id/tv_fact" />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:paddingVertical="5dp"
        android:textSize="10sp"
        android:textAlignment="center"
        android:text="If you want to see this again, Tab on CQ Page"
        android:textColor="@color/white"
        android:fontFamily="@font/default_font"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_fact"
        app:layout_constraintStart_toStartOf="@+id/tv_fact"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>